<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="nl.tudelft.pl2.representation.ui.navigationBar.NavigationBarController"
            fx:id="navBarPane"
            visible="false"
            id="navigationBar"
            prefHeight="50" minWidth="-Infinity">

    <children>
        <HBox alignment="CENTER" minWidth="-Infinity" AnchorPane.leftAnchor="0.0" spacing="10.0">
            <children>
                <Button fx:id="navLeft" prefWidth="40" focusTraversable="false"/>
                <Button fx:id="navRight" prefWidth="40" focusTraversable="false"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
        <HBox alignment="CENTER" minWidth="-Infinity" AnchorPane.rightAnchor="0.0">
            <children>
                <Slider fx:id="zoomSlider"
                        min="10"
                        showTickLabels="true"
                        prefWidth="200"
                        focusTraversable="false"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>

    </children>
</AnchorPane>