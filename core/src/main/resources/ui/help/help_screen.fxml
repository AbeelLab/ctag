                       GridPane.columnIndex="0"
                       GridPane.halignment="RIGHT" GridPane.rowIndex="13" />
                <Separator GridPane.columnIndex="1" GridPane.rowIndex="13"
                           GridPane.halignment="CENTER" orientation="VERTICAL"/>
                <Label text="ctrl+S" GridPane.columnIndex="2"
                       GridPane.halignment="CENTER" GridPane.rowIndex="13" />

